<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource name="jdbc/co2db"
              auth="Container"
              type="jakarta.sql.DataSource"
              maxTotal="100"
              maxIdle="30"
              maxWaitMillis="10000"
              username="co2user"
              password="co2password"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/co2db?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"
              validationQuery="SELECT 1"
              testOnBorrow="true"/>
</Context> 