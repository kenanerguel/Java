<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <persistence-unit name="co2PU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/co2db</jta-data-source>
        
        <!-- Explizite Entity-Klassen-Deklarationen -->
        <class>com.mein.projekt.model.User</class>
        <class>com.mein.projekt.model.Artikel</class>
        
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- Connection Pool Settings -->
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider"/>
            <!-- Cache Settings -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <!-- Debug Settings -->
            <property name="hibernate.logger.level" value="DEBUG"/>
            <!-- Logging Konfiguration -->
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>
            <!-- JNDI Settings -->
            <property name="hibernate.jndi.url" value="java:comp/env"/>
            <property name="hibernate.jndi.class" value="org.apache.naming.java.javaURLContextFactory"/>
        </properties>
    </persistence-unit>
</persistence>
