<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="co2PU" transaction-type="RESOURCE_LOCAL">
        <!-- Hibernate als Provider -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Hier alle Entities eintragen -->
        <class>com.mein.projekt.model.User</class>
        <class>com.mein.projekt.model.Artikel</class>

        <properties>
            <!-- JDBC-Verbindungsdaten -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/co2db?createDatabaseIfNotExist=true"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>

            <!-- Schema-Aktualisierung: update, create, create-drop, validate -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <!-- SQL-Ausgaben (optional) -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Logging Konfiguration -->
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>
            
            <!-- Connection Pool -->
            <property name="hibernate.connection.pool_size" value="10"/>
            
            <!-- Cache -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            
            <!-- Debug -->
            <property name="hibernate.logger.level" value="DEBUG"/>
        </properties>
    </persistence-unit>
</persistence>
